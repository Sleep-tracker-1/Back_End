{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "data/*": ["/data"]
    },
    "declaration": false,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esNext",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "typings"]
}
